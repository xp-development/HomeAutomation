<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mvvm="clr-namespace:HomeAutomation.App.Mvvm;assembly=HomeAutomation.App"
             xmlns:rooms="clr-namespace:HomeAutomation.App.Views.Rooms;assembly=HomeAutomation.App"
             x:Class="HomeAutomation.App.Views.Rooms.RoomOverviewPage"
             mvvm:ViewModelLocator.ViewModelType="{x:Type rooms:RoomOverviewPageModel}"
             x:Name="Page">
    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding Path=Rooms}" VerticalOptions="StartAndExpand">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Command="{Binding Source={x:Reference Page}, Path=BindingContext.NavigateToRoomCommand}" CommandParameter="{Binding Path=Id}" Text="{Binding Path=Description}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="New room" Command="{Binding Path=NewRoomCommand}" VerticalOptions="End" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>